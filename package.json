{
  "name": "@storeon/crosstab",
  "version": "1.0.1",
  "description": "Module for storeon to sync state at different tabs of the browser",
  "main": "./index.js",
  "types": "./index.d.ts",
  "author": "Ivan Solovev <ivan@solovev.one>",
  "license": "MIT",
  "repository": "storeon/crosstab",
  "scripts": {
    "lint": "eslint *.js",
    "spell": "yaspeller *.md",
    "test": "jest --coverage && yarn lint && size-limit && yarn spell",
    "build:example": "parcel build example/index.html --no-cache --no-source-maps --public-url ."
  },
  "devDependencies": {
    "@logux/eslint-config": "^36.1.1",
    "@size-limit/dual-publish": "^4.4.1",
    "@size-limit/preset-small-lib": "^4.4.1",
    "@storeon/localstorage": "^0.14.0",
    "autoprefixer": "^9.7.4",
    "check-dts": "^0.1.4",
    "dual-publish": "^0.8.4",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "^17.2.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.8",
    "parcel-bundler": "^1.12.4",
    "size-limit": "^4.4.1",
    "storeon": "^2.0.1",
    "yaspeller": "^6.0.3"
  },
  "size-limit": [
    {
      "import": {
        "index.js": "{ crossTab }"
      },
      "limit": "219 B"
    }
  ],
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": "eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && size-limit"
    }
  },
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "dictionary": [
      "storeon",
      "versioning",
      "crosstab",
      "gzipped",
      "GitHub"
    ]
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config",
    "rules": {
      "node/no-unpublished-require": "off",
      "unicorn/better-regex": "off",
      "func-style": "off"
    }
  },
  "postcss": {
    "map": false,
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "last 2 versions"
  ]
}
